<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
    <!-- max size of the upload request -->
    	<param-name>maxSize</param-name>
    	<param-value>3145728</param-value>
  	</context-param>
  	<context-param>
    <!-- Useful in development mode to slow down the uploads in fast networks.
         Put the number of milliseconds to sleep in each block received in the server.
         false or 0, means don't use slow uploads  -->
    	<param-name>slowUploads</param-name>
    	<param-value>0</param-value>
  	</context-param>

	<servlet>
    	<servlet-name>UploadPhotographs</servlet-name>
    	<servlet-class>org.fourgeeks.gha.webclient.server.UploadPhotographsHttpServlet</servlet-class>
  	</servlet>
  	
  	<servlet-mapping>
    	<servlet-name>UploadPhotographs</servlet-name>
    	<url-pattern>*.gupld</url-pattern>
  	</servlet-mapping>
  
	<servlet>
		<servlet-name>GWTLoginService</servlet-name>
		<servlet-class>org.fourgeeks.gha.webclient.server.login.GWTLoginServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GWTLoginService</servlet-name>
		<url-pattern>/webclient/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GWTEiaTypeService</servlet-name>
